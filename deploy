    <!-- Deployment Configuration -->
    <script>
        // Google Analytics Tracking
        (function() {
            const gaId = 'UA-XXXXX-1'; // Replace with your GA ID
            const script = document.createElement('script');
            script.src = `https://www.googletagmanager.com/gtag/js?id=${gaId}`;
            script.async = true;
            document.head.appendChild(script);

            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', gaId);
        })();

        // Main App Functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Environment Configuration
            const env = {
                apiUrl: 'https://api.healthscan.pro/v1',
                debugMode: false,
                dev: window.location.hostname === 'localhost'
            };

            const scanBtn = document.getElementById('scanBtn');
            const rescanBtn = document.getElementById('rescanBtn');
            const printBtn = document.getElementById('printBtn');
            const scanSection = document.getElementById('scanSection');
            const resultsSection = document.getElementById('resultsSection');
            const scanArea = document.getElementById('scanArea');
            const detailedResults = document.getElementById('detailedResults');
            const normalResults = document.getElementById('normalResults');
            const warningResults = document.getElementById('warningResults');
            const criticalResults = document.getElementById('criticalResults');
            
            // Simulate scan with random results
            scanBtn.addEventListener('click', function() {
                // Show scanning animation
                scanBtn.disabled = true;
                scanBtn.textContent = 'Scanning...';
                scanArea.style.backgroundColor = '#dbeafe';
                
                // Simulate scan delay
                setTimeout(function() {
                    // Hide scan section, show results
                    scanSection.classList.add('hidden');
                    resultsSection.classList.remove('hidden');
                    detailedResults.classList.remove('hidden');
                    
                    // Generate random results (demo)
                    const resultType = Math.floor(Math.random() * 3);
                    
                    if(resultType === 0) {
                        normalResults.classList.remove('hidden');
                        document.getElementById('condition1').textContent = '- No significant markers detected';
                        document.getElementById('condition2').textContent = '- Normal immune activity';
                        document.getElementById('condition3').textContent = '- Balanced oxidative levels';
                    } else if(resultType === 1) {
                        warningResults.classList.remove('hidden');
                        document.getElementById('condition1').textContent = '- Mild glucose irregularity';
                        document.getElementById('condition2').textContent = '- Slight immune elevation';
                        document.getElementById('condition3').textContent = '- Moderate oxidative stress';
                    } else {
                        criticalResults.classList.remove('hidden');
                        document.getElementById('condition1').textContent = '- Significant glucose irregularity';
                        document.getElementById('condition2').textContent = '- Elevated inflammatory markers';
                        document.getElementById('condition3').textContent = '- High oxidative stress detected';
                    }
                    
                }, 3000);
            });
            
            // Reset for rescan
            rescanBtn.addEventListener('click', function() {
                resultsSection.classList.add('hidden');
                scanSection.classList.remove('hidden');
                scanBtn.disabled = false;
                scanBtn.textContent = 'Start Scan';
                scanArea.style.backgroundColor = '';
                
                // Hide all result types
                normalResults.classList.add('hidden');
                warningResults.classList.add('hidden');
                criticalResults.classList.add('hidden');
            });
            
            // Print functionality
            printBtn.addEventListener('click', function() {
                window.print();
            });
        });
    </script>
